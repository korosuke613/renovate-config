{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)",
    "schedule:monthly"
  ],
  "ignorePresets": [
    "helpers:pinGitHubActionDigests"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": false
  },
  "minimumReleaseAge": "14 days",
  "configMigration": true,

  "packageRules": [
    {
      // 3rd party action の digest を固定する
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true,
      "matchPackageNames": [
        "!actions/{/,}**",
        "!korosuke613/{/,}**",
        "!cybozu/{/,}**"
      ]
    }
  ]
}
